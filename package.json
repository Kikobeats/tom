{
  "name": "tom-microservice",
  "description": "Tom creates customers, subscriptions plans & send notifications.",
  "homepage": "https://tom.js.org",
  "version": "3.2.3",
  "main": "src",
  "bin": {
    "tom": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "contributors": [
    "rubenmoya <rmoyarodriguez@gmail.com>",
    "Rub√©n Moya <ruben@acidtango.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikobeats/tom-microservice.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/tom-microservice/issues"
  },
  "keywords": [
    "backoffice",
    "email",
    "microservice",
    "notification",
    "payment",
    "stripe",
    "subscriptions"
  ],
  "dependencies": {
    "acho": "~4.0.6",
    "beauty-error": "~1.2.8",
    "body-parser": "~1.19.0",
    "chalk": "~4.1.0",
    "compression": "~1.7.4",
    "cors": "~2.8.5",
    "cosmiconfig": "~7.0.0",
    "country-vat": "~1.0.0",
    "emittery": "~0.8.1",
    "express": "~4.17.1",
    "got": "~11.8.2",
    "helmet": "~4.5.0",
    "import-modules": "~2.1.0",
    "is-buffer": "~2.0.5",
    "is-european": "~1.0.3",
    "jsendp": "~2.1.0",
    "lodash": "~4.17.21",
    "mailgen": "~2.0.14",
    "map-values-deep": "~1.0.2",
    "meow": "~9.0.0",
    "morgan": "~1.10.0",
    "nanoid": "~3.1.22",
    "nodemailer": "~6.6.0",
    "ow": "~0.23.0",
    "p-reflect": "~3.0.0",
    "p-retry": "~4.5.0",
    "p-waterfall": "~2.1.1",
    "pretty-ms": "~7.0.1",
    "req-country": "~1.2.2",
    "request-ip": "~2.1.3",
    "time-span": "~4.0.0",
    "stripe": "^8.143.0",
    "to-query": "~1.6.1",
    "twit": "~2.2.11",
    "update-notifier": "~5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "latest",
    "browser-sync": "latest",
    "ci-env": "latest",
    "ci-publish": "latest",
    "concurrently": "latest",
    "conventional-github-releaser": "latest",
    "coveralls": "latest",
    "faker": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-concat": "latest",
    "gulp-cssnano": "latest",
    "gulp-strip-css-comments": "latest",
    "gulp-uglify": "latest",
    "simple-git-hooks": "latest",
    "imagemin-lint-staged": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest",
    "svr": "latest",
    "test-listen": "latest",
    "untracked": "latest"
  },
  "engines": {
    "node": ">= 12"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "build": "gulp build && untracked > .nowignore",
    "clean": "rm -rf node_modules",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "svr src/router",
    "dev:docs": "concurrently \"gulp\" \"npm run dev:docs:server\"",
    "dev:docs:server": "browser-sync start --server --files \"index.html, README.md, static/**/*.(css|js)\"",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github && (ci-publish || npm publish --access=public)",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "start": "tom",
    "test": "NODE_ENV=test nyc ava",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/helpers.js"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit",
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "package.json": [
      "finepack --sort-ignore-object-at ava"
    ],
    "*.js,!*.min.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
