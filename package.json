{
  "name": "tom-microservice",
  "description": "Tom creates customers, subscriptions plans & send notifications.",
  "homepage": "https://tom.js.org",
  "version": "2.0.0",
  "main": "src",
  "bin": {
    "tom": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikobeats/tom-microservice.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/tom-microservice/issues"
  },
  "keywords": [
    "backoffice",
    "email",
    "microservice",
    "notification",
    "payment",
    "stripe",
    "subscriptions"
  ],
  "dependencies": {
    "acho": "~4.0.2",
    "auto-parse": "~1.5.1",
    "body-parser": "~1.18.3",
    "chalk": "~2.4.1",
    "clean-stack": "~1.3.0",
    "compression": "~1.7.3",
    "cors": "~2.8.4",
    "cosmiconfig": "~5.0.5",
    "deep-map": "~1.5.0",
    "emittery": "~0.4.1",
    "express": "~4.16.3",
    "got": "~8.3.2",
    "helmet": "~3.13.0",
    "import-modules": "~1.1.0",
    "jsendp": "~2.0.0",
    "lodash": "~4.17.10",
    "mailgen": "~2.0.5",
    "meow": "~5.0.0",
    "morgan": "~1.9.0",
    "nodemailer": "~4.6.7",
    "ow": "~0.6.0",
    "p-reflect": "~1.0.0",
    "p-retry": "~2.0.0",
    "p-series": "~1.1.0",
    "pretty-ms": "~3.2.0",
    "pupa": "~1.0.0",
    "stripe": "~6.4.0",
    "time-span": "~2.0.0",
    "update-notifier": "~2.5.0",
    "uuid": "~3.3.2"
  },
  "devDependencies": {
    "ava": "latest",
    "browser-sync": "latest",
    "concurrently": "latest",
    "coveralls": "latest",
    "faker": "latest",
    "finepack": "latest",
    "git-dirty": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-concat": "latest",
    "gulp-cssnano": "latest",
    "gulp-strip-css-comments": "latest",
    "gulp-uglify": "latest",
    "husky": "latest",
    "imagemin-lint-staged": "latest",
    "lint-staged": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "svr": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "clean": "rm -rf node_modules",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "dev": "svr src/routes",
    "dev:docs": "concurrently \"gulp\" \"npm run dev:docs:server\"",
    "dev:docs:server": "browser-sync start --server --files \"index.html, README.md, static/**/*.(css|js)\"",
    "lint": "standard-markdown README.md && standard",
    "precommit": "lint-staged",
    "pretest": "npm run lint",
    "start": "node src/server",
    "test": "NODE_ENV=test nyc ava test --verbose"
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ],
    "package.json": [
      "finepack",
      "git add"
    ],
    "*.md": [
      "standard-markdown",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
