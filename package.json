{
  "name": "tom-microservice",
  "description": "Tom creates customers, subscriptions plans & send notifications.",
  "homepage": "https://tom.js.org",
  "version": "2.5.0",
  "main": "src",
  "bin": {
    "tom": "bin/index.js"
  },
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://github.com/Kikobeats"
  },
  "contributors": [
    {
      "name": "rubenmoya",
      "email": "rmoyarodriguez@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikobeats/tom-microservice.git"
  },
  "bugs": {
    "url": "https://github.com/Kikobeats/tom-microservice/issues"
  },
  "keywords": [
    "backoffice",
    "email",
    "microservice",
    "notification",
    "payment",
    "stripe",
    "subscriptions"
  ],
  "dependencies": {
    "acho": "~4.0.4",
    "beauty-error": "~1.2.0",
    "body-parser": "~1.19.0",
    "chalk": "~2.4.2",
    "compression": "~1.7.4",
    "cors": "~2.8.5",
    "cosmiconfig": "~5.2.1",
    "emittery": "~0.4.1",
    "express": "~4.17.1",
    "got": "~9.6.0",
    "helmet": "~3.18.0",
    "import-modules": "~1.1.0",
    "jsendp": "~2.1.0",
    "lodash": "~4.17.11",
    "mailgen": "~2.0.7",
    "map-values-deep": "~1.0.0",
    "meow": "~5.0.0",
    "morgan": "~1.9.1",
    "nodemailer": "~6.2.1",
    "ow": "~0.13.2",
    "p-reflect": "~2.1.0",
    "p-retry": "~4.1.0",
    "p-waterfall": "~2.1.0",
    "pretty-ms": "~5.0.0",
    "pupa": "~2.0.0",
    "stripe": "^7.1.0",
    "time-span": "~3.1.0",
    "to-query": "~1.5.1",
    "twit": "~2.2.11",
    "update-notifier": "~3.0.0",
    "uuid": "~3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "ava": "1",
    "browser-sync": "latest",
    "ci-publish": "latest",
    "concurrently": "latest",
    "conventional-github-releaser": "latest",
    "coveralls": "latest",
    "faker": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "git-dirty": "latest",
    "gulp": "latest",
    "gulp-autoprefixer": "latest",
    "gulp-concat": "latest",
    "gulp-cssnano": "latest",
    "gulp-strip-css-comments": "latest",
    "gulp-uglify": "latest",
    "husky": "latest",
    "imagemin-lint-staged": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "nyc": "latest",
    "prettier-standard": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest",
    "svr": "latest",
    "test-listen": "latest"
  },
  "engines": {
    "node": ">= 8"
  },
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "build:docs": "gulp build",
    "clean": "rm -rf node_modules",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "dev": "svr src/routes",
    "dev:docs": "concurrently \"gulp\" \"npm run dev:docs:server\"",
    "dev:docs:server": "browser-sync start --server --files \"index.html, README.md, static/**/*.(css|js)\"",
    "lint": "standard-markdown README.md && standard",
    "postrelease": "npm run release:tags && npm run release:github && ci-publish",
    "precommit": "lint-staged",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "start": "node src/server",
    "test": "NODE_ENV=test nyc ava test --verbose",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "package.json": [
        "finepack",
        "git add"
      ],
      "*.js,!*.min.js": [
        "prettier-standard",
        "git add"
      ],
      "*.md": [
        "standard-markdown",
        "git add"
      ],
      "*.{png,jpeg,jpg,gif,svg}": [
        "imagemin-lint-staged",
        "git add"
      ]
    }
  },
  "standard": {
    "env": [
      "mocha"
    ]
  }
}
